sources:
  hourly-native-atm2d: &base-default
    args: &args-default
      request: &request-default
        class: d1
        dataset: climate-dt
        activity: CMIP6
        experiment: hist
        generation: 1
        model: {{ model }}
        realization: 1
        resolution: high
        expver: {{ expver }}
        type: fc
        stream: clte
        date: {{ data_start_date }}
        time: '0000'
        param: 167
        levtype: sfc
        step: 0
      data_start_date: {{ data_start_date }}T0000
      data_end_date: {{ data_end_date }}
      chunks: D  # Default chunks / chunk size
      savefreq: h  # at what frequency are data saved
      timestep: h  # base timestep for step timestyle
      timestyle: date  # variable date or variable step
    description: hourly data on native grid {{ grid }}.
    driver: gsv
    metadata: &metadata-default
      fdb_path: {{ fdb_path }}
      fdb_home: {{ fdb_home }}
      eccodes_path: {{ eccodes_path }}
      variables: {{ variables_atm2d }}
      source_grid_name: {{ grid }}
      fixer_name: ifs-nemo-destine-v1-nan

  hourly-native-atm3d:
    <<: *base-default
    description: hourly 3D atmospheric data on native grid {{ grid }}.
    args:
      <<: *args-default
      chunks: 6H
      request:
        <<: *request-default
        param: 131
        levtype: pl
        levelist: {{ atm_levels }}
    metadata:
      <<: *metadata-default
      levels: {{ atm_levels }}
      variables: {{ variables_atm3d }}

  hourly-hpz7-atm2d:
    <<: *base-default
    description: hourly 2D atmospheric data on healpix grid (zoom=7, h128).
    args:
      <<: *args-default
      request:
        <<: *request-default
        resolution: standard
    metadata:
      <<: *metadata-default
      fdb_path: 
        /project/project_465000454/experiments/{{ expver }}/fdb/HEALPIX_grids/etc/fdb/config.yaml
